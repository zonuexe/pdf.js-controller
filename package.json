{
  "name": "@zonuexe/pdf.js-controller",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zonuexe/pdf.js-controller.git"
  },
  "author": "azu",
  "email": "azuciao@gmail.com",
  "homepage": "https://github.com/zonuexe/pdf.js-controller",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zonuexe/pdf.js-controller/issues"
  },
  "version": "1.1.2",
  "description": "provide controller and text layer for pdf.js",
  "main": "./lib/PDFJSController.js",
  "files": [
    "build",
    "css",
    "lib",
    "src"
  ],
  "directories": {
    "test": "test"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run compile && npm run bundle",
    "bundle": "esbuild src/browser-entry.ts --bundle --format=esm --platform=browser --external:pdfjs-dist --external:pdfjs-dist/* --outfile=build/PDFJSController.js",
    "compile": "tsc -p tsconfig.json",
    "watch": "tsc -w -p tsconfig.json",
    "prepublish": "npm run --if-present build"
  },
  "keywords": [
    "pdf",
    "pdf.js",
    "text",
    "selection",
    "presentation",
    "slide"
  ],
  "devDependencies": {
    "esbuild": "^0.25.11",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "domify": "^1.4.0",
    "pdfjs-dist": "^5.4.296"
  }
}
